/* Items */
.gopher {
	width: 40px;
	height: 40px;
	margin: 0 -10px;
}

.digger {
	width: 60px;
	height: 60px;
	margin: 0 -20px;
}

/* Utility */

.hidden {
	position: absolute; 
	overflow: hidden; 
	clip: rect(0 0 0 0); 
	height: 1px; width: 1px; 
	margin: -1px; padding: 0; border: 0;
}