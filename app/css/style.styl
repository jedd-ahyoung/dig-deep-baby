[data-amt] {
	overflow: visible;

	&:after {
		position: absolute;
		bottom: -12px;
		right: 0px;
		content: attr(data-amt);
		font-family: "Ceviche One", cursive;
		font-size: 80px;
		color: white;
		text-align: right;
	}
}

[data-depth]:after {
	position: fixed;
	bottom: 5px;
	right: 5px;
	width: 50%;
	text-align: right;
	content: attr(data-depth) ' feet';
	font-family: "Ceviche One", cursive;
	font-size: 40px;
	text-shadow:
		-1px -1px 0 #000,  
		1px -1px 0 #000,
		-1px 1px 0 #000,
		1px 1px 0 #000;
	border-bottom: 1px solid white;
	color: white;
}

.digbutton {
	position: absolute;
	left: 50%;
	width: 250px;
	height: 250px;
	margin-left: -125px;
	bottom: 0px;
	transition: all 50ms ease-in-out;

	&:hover, &:focus {
		transform: scale(1.1, 1.1);
	}

	&:active {
		transform: rotate(-20deg);
	}
}

