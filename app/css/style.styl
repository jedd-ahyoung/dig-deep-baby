* {
	box-sizing: border-box;
}

html {
	margin: 0;
	padding: 0;
	overflow: hidden;
}

body {
	background: #55eeff url("../img/bg_sky.png") no-repeat center center;
	margin: 0;
	padding: 0;
	font-family: sans-serif;
}

.overlay {
	position: fixed;
	top: 0;
	left: 0;
	height: 100%;
	width: 100%;
}

.bank {
	color: green;
	font-size: 2em;
	text-shadow:
		-1px -1px 0 #fff,  
		1px -1px 0 #fff,
		-1px 1px 0 #fff,
		1px 1px 0 #fff;
}

.shopinterface {
	padding: 0px;
	width: 600px;
	margin: 0 auto;
	position: relative;
	user-select: none;

	.tablist {
		margin: 0;
		padding: 0px;
		white-space: nowrap;
		user-select: none;

		.tabhead {
			display: inline-block;
			width: 200px;
			border-top-left-radius: 10px;
			border-top-right-radius: 10px;
			font-size: 1em;
			padding: .5em;
			background: white;
			background: rgba(255,255,255,.4);
			text-transform: uppercase;
			text-align: center;
			user-select: none;
		}

		.active {
			background: white;
		}
	}

	.tab {
		max-height: 400px;
		overflow: auto;
		width: 100%;
		background: white;
		background: rgba(255,255,255,.4);
		border: 3px solid white;
		user-select: none;
	}
}

.shopitem {
	padding: 5px;
	position: relative;
	color: rgba(0,0,0,0.3);
	transition: all 500ms ease-in-out;

	.itemcount {
		color: white;
		font-family: "Ceviche One", cursive;
		font-size: 40px;
		text-shadow:
			-1px -1px 0 #000,  
			1px -1px 0 #000,
			-1px 1px 0 #000,
			1px 1px 0 #000;
	}
}

.enabled {
	color: black;

	&:hover {
		background: white;
		background: rgba(255,255,255,.7);
	}

	&:active {
		background: white;
	}
}

.wrapper {
	background: url("../img/grass.svg") repeat-x bottom;
	background-size: 50px;
	margin: 0;
	position: relative;
	height: 100%;
}

.horizon {
	background: #8C5C0E url("../img/brown049.jpg");

